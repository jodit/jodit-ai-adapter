{
	"name": "jodit-ai-adapter",
	"displayName": "Jodit AI Assistant Adapter Service",
	"version": "0.1.18",
	"description": "Universal AI adapter service for Jodit Editor AI Assistant Pro using Vercel AI SDK",
	"main": "./dist/index.js",
	"module": "./dist/index.mjs",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"require": "./dist/index.js",
			"import": "./dist/index.mjs"
		},
		"./run": {
			"types": "./dist/run.d.ts",
			"require": "./dist/run.js",
			"import": "./dist/run.mjs"
		},
		"./package.json": "./package.json"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/jodit/jodit-ai-adapter.git"
	},
	"bugs": {
		"url": "https://github.com/jodit/jodit-ai-adapter/issues"
	},
	"homepage": "https://xdsoft.net/jodit/",
	"engines": {
		"node": ">=18.0.0"
	},
	"scripts": {
		"newversion": "npm version patch --no-git-tag-version && npm run newversiongit",
		"git": "git add --all  && git commit -m \"New version $npm_package_version. Read more https://github.com/jodit/jodit-ai-adapter/releases/tag/$npm_package_version \" && git tag $npm_package_version",
		"newversiongit": "npm run git && git push --tags origin HEAD:main",
		"start": "npm run dev",
		"dev": "CONFIG_FILE=config.example.json nodemon",
		"build": "npm run clean && tsup",
		"clean": "rm -rf dist",
		"test": "NODE_ENV=test NODE_OPTIONS='--experimental-vm-modules' jest --runInBand --detectOpenHandles",
		"test:watch": "jest --watch",
		"test:coverage": "NODE_ENV=test NODE_OPTIONS='--experimental-vm-modules' jest --coverage",
		"lint": "eslint src/ && tsc --noEmit",
		"lint:fix": "eslint src/ --fix",
		"format": "prettier --write ./src",
		"docker:build": "docker build -t jodit-ai-adapter .",
		"docker:run": "docker run --rm -p 8082:8082 jodit-ai-adapter",
		"openapi:generate": "tsx scripts/generate-openapi.ts",
		"docs:setup": "cd docs && python3 -m venv .venv && . .venv/bin/activate  && pip install -r requirements.txt",
		"docs:serve": "cd docs && . .venv/bin/activate && mkdocs serve",
		"docs:build": "cd docs && . .venv/bin/activate && mkdocs build",
		"docs:deploy": "cd docs && . .venv/bin/activate  && mkdocs gh-deploy"
	},
	"keywords": [
		"jodit",
		"ai",
		"adapter",
		"openai",
		"deepseek",
		"claude",
		"vercel-ai-sdk"
	],
	"author": "Chupurnov Valeriy <chupurnov@gmail.com>",
	"license": "MIT",
	"dependencies": {
		"@ai-sdk/openai": "^3.0.26",
		"@hapi/boom": "^10.0.1",
		"ai": "^6.0.76",
		"deepmerge": "^4.3.1",
		"dotenv": "^17.2.4",
		"express": "^5.2.1",
		"express-async-handler": "^1.2.0",
		"ioredis": "^5.9.2",
		"undici": "^7.21.0",
		"winston": "^3.19.0",
		"zod": "^4.3.6"
	},
	"devDependencies": {
		"@asteasolutions/zod-to-openapi": "^8.4.0",
		"@eslint/js": "^10.0.1",
		"@types/express": "^5.0.6",
		"@types/ioredis": "^5.0.0",
		"@types/jest": "^30.0.0",
		"@types/node": "^25.2.1",
		"@types/supertest": "^6.0.3",
		"@typescript-eslint/eslint-plugin": "^8.54.0",
		"@typescript-eslint/parser": "^8.54.0",
		"concurrently": "^9.2.1",
		"eslint": "^10.0.0",
		"globals": "^17.3.0",
		"jest": "^30.2.0",
		"nock": "^14.0.10",
		"nodemon": "^3.1.11",
		"prettier": "^3.8.1",
		"supertest": "^7.2.2",
		"testcontainers": "^11.11.0",
		"ts-jest": "^29.4.6",
		"ts-node": "^10.9.2",
		"tsup": "^8.5.1",
		"tsx": "^4.21.0",
		"typescript": "^5.9.3",
		"yaml": "^2.8.2"
	},
	"sideEffects": false
}
